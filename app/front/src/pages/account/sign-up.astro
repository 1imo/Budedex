---
import Layout from '../../components/layouts/Layout.astro';
import SignUpForm from '../../components/SignUpForm';
---

<Layout title="Sign Up - Budedex">
  <div class="container mx-auto py-8">
    <div class="max-w-md mx-auto">
      <div class="text-center mb-8">
        <h1 class="text-3xl pixel-font uppercase tracking-tight mb-2">Create Account</h1>
        <p class="regular-font text-muted-foreground">Join the community and start tracking strains</p>
      </div>
      
      <div class="bg-white">
        <SignUpForm client:load />
      </div>
      
      <div class="text-center mt-6">
        <p class="text-sm regular-font text-muted-foreground">
          Already have an account? 
          <a href="/account/sign-in" class="font-medium text-primary hover:underline regular-font">
            Sign in
          </a>
        </p>
      </div>
    </div>
  </div>
</Layout>
